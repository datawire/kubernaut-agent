{
  "variables": {
    "build_url": "unknown",
    "commit": null,
    "force_deregister": "false",
    "kubernautlet_binary_name": null
  },

  "builders": [
    {
      "name": "AWS-kubernaut-k8s-v1102",
      "type": "amazon-ebs",
      "ami_description": "kubernaut vm",
      "ami_name": "kubernaut-{{ user `commit` }}-k8s-v1102",
      "instance_type": "m4.large",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 10,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "force_deregister": "{{ user `force_deregister` }}",
      "region": "us-east-1",
      "run_tags": {
        "Build": "{{ user `build_url` }}",
        "Commit": "{{ user `commit` }}",
        "Name": "packer-kubernaut-{{ user `commit` }}-k8s-v1102",
        "Role": "packer"
      },
      "source_ami": "ami-5cc39523",
      "sriov_support": true,
      "ssh_username": "ubuntu",
      "tags": {
        "commit": "{{ user `commit` }}"
      }
    },
    {
      "name": "GCE-kubernaut-k8s-v1102",
      "type": "googlecompute",
      "project_id": "datawireio",
      "image_description": "kubernaut vm",
      "image_name": "kubernaut-{{ user `commit` }}-k8s-v1102",
      "preemptible": true,
      "zone": "us-central1-f",
      "source_image_family": "ubuntu-1804-lts",
      "ssh_username": "ubuntu",
      "image_labels": {
        "commit": "{{ user `commit` }}"
      }
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "build/out/{{ user `kubernautlet_binary_name` }}",
      "destination": "/tmp/kubernautlet"
    },
    {
      "type": "file",
      "source": "kubernautlet.service",
      "destination": "/etc/systemd/system/kubernautlet.service"
    },
    {
      "only": ["AWS-kubernaut-k8s-v1102", "GCE-kubernaut-k8s-v1102"],
      "type": "shell",
      "scripts": [
        "packer/kubernaut_k8s-v1102.sh"
      ],
      "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'"
    }
  ]
}
